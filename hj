document.getElementById('positive-counter1').addEventListener('click', function () {
    const counterNumber1 = document.getElementById('count-num1');
    const countVal1 = counterNumber1.value;
    counterNumber1.value = parseInt(countVal1) + 1;
    const blackPrice = document.getElementById('blackPrice');
    blackPrice.innerText = 1219 * parseInt(counterNumber1.value);
    calculation();
})
document.getElementById('negative-counter1').addEventListener('click', function () {
    const counterNumber1 = document.getElementById('count-num1');
    const countVal1 = counterNumber1.value;
    if (countVal1 > 0) {
        counterNumber1.value = parseInt(countVal1) - 1;
        const blackPrice = document.getElementById('blackPrice');
        blackPrice.innerText = 1219 * parseInt(counterNumber1.value);
    }
    calculation();
})
document.getElementById('positive-counter2').addEventListener('click', function () {
    const counterNumber2 = document.getElementById('count-num2');
    const countVal2 = counterNumber2.value;
    counterNumber2.value = parseInt(countVal2) + 1;
    const sliconPrice = document.getElementById('sliconPrice');
    sliconPrice.innerText = 59 * parseInt(counterNumber2.value);
    calculation();
})
document.getElementById('negative-counter2').addEventListener('click', function () {
    const counterNumber2 = document.getElementById('count-num2');
    const countVal2 = counterNumber2.value;
    if (countVal2 > 0) {
        counterNumber2.value = parseInt(countVal2) - 1;
        const sliconPrice = document.getElementById('sliconPrice');
        sliconPrice.innerText = 59 * parseInt(counterNumber2.value);
    }
    calculation();

})
function calculation() {
    const b = parseInt(document.getElementById('blackPrice').innerText);
    const s = parseInt(document.getElementById('sliconPrice').innerText);
    const subtotal = b + s;
    const tax = subtotal * .1;
    const totalAmount = subtotal + tax;
    document.getElementById('sub-total').innerText = subtotal;
    document.getElementById('tax').innerText = tax.toFixed();
    document.getElementById('total-Amount').innerText = totalAmount;
}
